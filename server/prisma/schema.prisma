generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./database.db"
}

model Patient {
  id        Int      @id @default(autoincrement())
  name      String
  age       Int
  weight    Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model DoseSchema {
  id Int @id @default(autoincrement())
}

model Measurement {
  id        Int   @id @default(autoincrement())
  patientId String
  weight    Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
